@model BulkyBook.Model.Category

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <h3>Are you sure you want to delete this?</h3>
        <div asp-validation-summy="All"></div>
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="mb-3">
            @Html.DisplayFor(model => model.DisplayOrder)
        </div>

        <div class="mb-3">
            @Html.DisplayFor(model => model.CreateDateTime)
        </div>

        <input type="submit" value="Delete" class="btn btn-primary" style="width:150px" />
        <a asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

    </div>
</form>

