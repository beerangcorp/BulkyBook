@model IEnumerable<BulkyBook.Model.Category>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="container p-4">
        <div class="container p-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i>&nbsp Create New</a>
            </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="width:150px">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:150px">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
